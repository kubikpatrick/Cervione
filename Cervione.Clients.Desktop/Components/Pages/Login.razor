@page "/login"

<PageTitle>Login</PageTitle>

<div class="d-flex justify-content-center align-items-center h-100 w-100 flex-column">
    <div class="mb-3">
        <h1 class="fs-1"> Welcome back !</h1>
        <h3 class="fs-6"> Enter your credentials</h3>
    </div>
    <EditForm Model="_request" OnSubmit="SubmitAsync">
        <div class="d-flex flex-column text-start gap-2">
            <div class="">
                <InputText @bind-Value="_serverUrl" type="url" class="form-control" placeholder="Server URL" required />
            </div>
        
            <div class="">
                <InputText @bind-Value="_request.Email" type="email" class="form-control" placeholder="Email" required />
            </div>

            <div class="">
                <InputText @bind-Value="_request.Password" type="password" class="form-control"placeholder="Password" required />
            <div class="col-12">
                <InputText @bind-Value="_request.Password" type="password" class="form-control" placeholder="Password" required />
            </div>

            <div class="w-100 py-3">
                <button class="btn btn-primary" type="submit">Login</button>
            </div>
            
            <div class="d-grid mt-4">
                <p class="text-center">No account yet ? <a href="/sign-up" class="text-decoration-none">Sign up</a>.</p>
            </div>
        </div>
    </EditForm>
    <h3 class="fs-6"> No account yet ?
        <a class="" type="submit" href="/sign-up">Sign Up</a>
    </h3>
    <a class="" type="submit" href="/sign-up">Forgot Password</a>
    </EditForm> 
</div>